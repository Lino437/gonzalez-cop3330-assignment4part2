<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="anchorId" prefHeight="785.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.TodoController">
   <children>
      <AnchorPane prefHeight="780.0" prefWidth="600.0">
         <children>
            <Button layoutX="16.0" layoutY="741.0" mnemonicParsing="false" onAction="#newItemButtonPushed" text="Add New Item" />
            <Button layoutX="274.0" layoutY="741.0" mnemonicParsing="false" onAction="#deleteButtonPushed" text="Delete Item" />
            <Button layoutX="535.0" layoutY="741.0" mnemonicParsing="false" onAction="#clearButtonClear" text="Clear" />
            <VBox layoutX="12.0" layoutY="46.0" prefHeight="692.0" prefWidth="573.0">
               <children>
                  <TableView fx:id="tableView" prefHeight="702.0" prefWidth="573.0">
                    <columns>
                        <TableColumn fx:id="doneColumn" prefWidth="47.0" text="done" />
                      <TableColumn fx:id="descriptionColumn" minWidth="0.0" onEditCommit="#changeDescriptionCellEvent" prefWidth="368.0" text="Description" />
                        <TableColumn fx:id="dueDateColumn" onEditCommit="#changeDueDateCellEvent" prefWidth="157.0" text="Due Date" />
                    </columns>
                  </TableView>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="doneTextField" prefHeight="25.0" prefWidth="63.0" promptText="done?">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <TextField fx:id="descriptionTextField" prefHeight="25.0" prefWidth="374.0" promptText="Description">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <DatePicker fx:id="dueDateDatePicker" prefHeight="25.0" prefWidth="165.0" promptText="Due Date">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <MenuBar prefHeight="25.0" prefWidth="602.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#saveItemClicked" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#loadItemClicked" text="Load" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Display">
                     <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#displayAllClicked" text="All">
                           <toggleGroup>
                              <ToggleGroup fx:id="displayGroup" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#displayCompletedClicked" text="Completed" toggleGroup="$displayGroup" />
                        <RadioMenuItem mnemonicParsing="false" onAction="#displayUncompletedClicked" text="Uncompleted" toggleGroup="$displayGroup" />
                     </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#helpButtonClicked" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
